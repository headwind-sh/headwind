apiVersion: v1
kind: Secret
metadata:
  name: headwind-secrets
  namespace: headwind-system
  labels:
    app: headwind
type: Opaque
stringData:
  # Slack webhook URL (if slack.enabled is true in ConfigMap)
  # Example: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
  slack-webhook-url: ""

  # Microsoft Teams webhook URL (if teams.enabled is true in ConfigMap)
  # Example: https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
  teams-webhook-url: ""

  # Generic webhook URL (if webhook.enabled is true in ConfigMap)
  # Can be any HTTP/HTTPS endpoint that accepts POST requests
  webhook-url: ""
